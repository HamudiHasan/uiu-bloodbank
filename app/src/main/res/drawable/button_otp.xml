
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#F93E3E" />
            <gradient android:angle="90" android:startColor="#FF1856" android:endColor="#F93E3E"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#F93E3E" />
            <solid android:color="#FF1856"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#FF1856" />
            <gradient android:angle="90" android:startColor="#FF1856" android:endColor="#F93E3E" />
        </shape>
    </item>
</selector>